{
    "name": "artesaos/shield",
    "description": "A simple way to centralize your validation rules for laravel",
    "type": "package",
    "license": "MIT",
    "authors": [{
        "name": "Vinicius Reis",
        "email": "luiz.vinicius73@gmail.com"
    }],
    "keywords":          [
      "laravel",
      "validation",
      "rules",
      "form request",
      "modules",
      "ddd"
    ],
    "homepage": "https://github.com/artesaos/shield",
    "support": {
      "issues": "https://github.com/artesaos/shield/issues",
      "source": "https://github.com/artesaos/shield"
    },
    "require": {
      "illuminate/support": "~5.1 || ~5.2",
      "illuminate/filesystem": "~5.1 || ~5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0|^5.0",
        "orchestra/testbench": "~3.0",
        "mockery/mockery": "^0.9.4"
    },
    "autoload": {
      "psr-4": {
        "Artesaos\\Shield\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Artesaos\\Shield\\Test\\": "tests/"
      }
    },
    "minimum-stability": "stable"
}
